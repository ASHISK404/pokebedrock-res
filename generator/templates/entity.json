{
  "format_version": "1.18.3",
  "minecraft:client_entity": {
    "description": {
      "identifier": "pokemon:{name}",
      "materials": { "default": "zombie" },
      "textures": {
        "default": "textures/entity/pokemon/{name}/{name}",
        "shiny": "textures/entity/pokemon/{name}/shiny_{name}"
      },
      "geometry": { "default": "geometry.{name}" },
      "scripts": { "animate": ["look_at_target", "{pokemonType}_pokemon"] },
      "animations": {
        "walk": "animation.{name}.walk",
        "look_at_target": "animation.common.look_at_target",
        "chill": "animation.{name}.chill",
        "sit": "animation.{name}.sitting",
        "{pokemonType}_pokemon": "controller.animation.{pokemonType}.pokemon"
      },
      "render_controllers": ["controller.render.pokemon"],
      "spawn_egg": { "texture": "{name}", "texture_index": 0 }
    }
  }
}
