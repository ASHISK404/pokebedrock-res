{
  "format_version": "1.18.3",
  "minecraft:client_entity": {
    "description": {
      "identifier": "pokemon:{speciesId}",
      "materials": {
        "default": "zombie"
      },
      "textures": {
        "default": "textures/sprites/default/{speciesId}",
        "shiny": "textures/sprites/default/{speciesId}",
        "default_male": "textures/sprites/default/{speciesId}",
        "default_female": "textures/sprites/default/{speciesId}",
        "shiny_male": "textures/sprites/default/{speciesId}",
        "shiny_female": "textures/sprites/default/{speciesId}"
      },
      "geometry": {
        "default": "geometry.substitute"
      },
      "render_controllers": ["controller.render.pokemon"],
      "spawn_egg": {
        "texture": "{speciesId}",
        "texture_index": 0
      }
    }
  }
}
