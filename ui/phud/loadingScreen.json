{
  "namespace": "phud_loadingScreen",

  "anim_background_scroll": {
    "anim_type": "offset",
    "from": [0, "-0%y"],
    "to": [0, "-25%y"],
    "duration": "$background_scroll_duration"
  },

  "main@common.dirt_background": {
    "layer": 1000,
    "tiled_scale": [2, 2],
    "size": ["100%", "100%"],
    "controls": [
      {
        "text": {
          "type": "label",
          "anchor_from": "center",
          "anchor_to": "center",
          "text": "#text",
          "layer": 1002,
          "localize": true,
          "font_size": "normal",
          "text_alignment": "center",
          "offset": [0, 0],
          "bindings": [
            {
              "binding_type": "view",
              "source_control_name": "elements",
              "source_property_name": "#loadingScreen",
              "target_property_name": "#loadingScreenText"
            },
            {
              "binding_type": "view",
              "source_property_name": "(#loadingScreenText)",
              "target_property_name": "#text"
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "elements",
        "source_property_name": "#loadingScreen",
        "target_property_name": "#loadingScreen"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#loadingScreen = ''))",
        "target_property_name": "#visible"
      },
      {
        "binding_type": "view",
        "source_property_name": "(not (#loadingScreen = ''))",
        "target_property_name": "#enabled"
      }
    ]
  }
}
