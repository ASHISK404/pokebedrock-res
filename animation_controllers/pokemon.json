{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.pokemon": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": ["chill"],
          "transitions": [
            {
              "walk": "q.can_walk && query.modified_move_speed >= 0.01 && query.is_on_ground && !query.is_in_water"
            },
            {
              "swim": "q.can_swim && query.modified_move_speed >= 0.01 && !query.is_on_ground && query.is_in_water"
            },
            {
              "fly": "q.can_fly && query.modified_move_speed >= 0.01 && !query.is_on_ground && !query.is_in_water"
            }
          ],
          "blend_transition": 0.3
        },
        "walk": {
          "animations": ["walk"],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.01 && query.is_on_ground && !query.is_in_water"
            },
            {
              "swim": "q.can_swim && query.modified_move_speed >= 0.01 && !query.is_on_ground && query.is_in_water"
            },
            {
              "fly": "q.can_fly && query.modified_move_speed >= 0.01 && !query.is_on_ground && !query.is_in_water"
            }
          ],
          "blend_transition": 0.3
        },
        "fly": {
          "animations": ["fly"],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.01 && query.is_on_ground && !query.is_in_water"
            },
            {
              "swim": "q.can_swim && query.modified_move_speed >= 0.01 && !query.is_on_ground && query.is_in_water"
            },
            {
              "walk": "q.can_walk && query.modified_move_speed >= 0.01 && query.is_on_ground && !query.is_in_water"
            }
          ],
          "blend_transition": 0.3
        },
        "swim": {
          "animations": ["swim"],
          "transitions": [
            {
              "default": "query.modified_move_speed <= 0.01 && query.is_on_ground && !query.is_in_water"
            },
            {
              "walk": "q.can_walk && query.modified_move_speed >= 0.01 && query.is_on_ground && !query.is_in_water"
            },
            {
              "fly": "q.can_fly && query.modified_move_speed >= 0.01 && !query.is_on_ground && !query.is_in_water"
            }
          ],
          "blend_transition": 0.3
        }
      }
    }
  }
}
